@import 'nib'

vendor-prefixes = webkit moz o ms official

//Recommended font sizes
 f12 = 0.75rem
 f16 = 1rem
 f21 = 1.3125rem
 f28 = 1.75rem
 f37 = 2.3125rem
 f50 = 3.1250rem
 f67 = 4.1875rem
 f89 = 5.5625rem
f119 = 7.4375rem
f159 = 9.9375rem

// Generales
@-ms-viewport
    width device-width

html
    box-sizing border-box
    font-size 16px
*
*:after
*:before
    margin 0
    padding 0
    box-sizing inherit
    transition all ease
    &:hover
        transition all ease
a
a:visited
a:focus
    text-decoration none
    color inherit
body
    font-family sans-serif
    font-size 1em
    width 100%
    max-width 100vw
h1
h2
h3
h4
h5
h6
    font-weight bolder
    margin 0
    padding 0
img 
    width 100%
    max-width 100%
    
//Special Classes
.bold
    font-weight bolder
// Index


// Media Query
 
@media (min-width: 993px) //Desktop
    .hidden-xl
        display none
    
@media (max-width: 992px) and (min-width: 769px) //Tablet
    .hidden-mid
        display none
        
@media (max-width: 768px) //Mobile
    .hidden-xs
        display none